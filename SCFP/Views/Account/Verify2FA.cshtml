@{
    ViewData["Title"] = "Verificação em Duas Etapas";
}

<h2 class="text-center">Verificação em Duas Etapas</h2>

<div class="row justify-content-center mt-4">
    <div class="col-md-4">

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["Message"]
            </div>
        }

        <form asp-action="Verify2FA" method="post" class="mb-3">
            <div class="form-group">
                <label for="code">Digite o código que foi enviado para seu e-mail:</label>
                <input type="text" class="form-control" name="code" id="code" required autofocus />
            </div>

            <div class="form-group mt-3 text-center">
                <button type="submit" class="btn btn-primary">Verificar</button>
            </div>
        </form>

        <form asp-action="ResendCode" method="post" class="text-center">
            <button type="submit" class="btn btn-link">Reenviar código</button>
        </form>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mt-3" role="alert">
                @Html.ValidationSummary()
            </div>
        }
    </div>
</div>
