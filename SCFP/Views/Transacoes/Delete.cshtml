@model SCFP.Models.Transacao

@{
    ViewData["Title"] = "Excluir Transação";
}

<h2>Excluir Transação</h2>

<h4>Tem certeza que deseja excluir?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Data</dt>
        <dd class="col-sm-10">@Model.Data.ToShortDateString()</dd>

        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>

        <dt class="col-sm-2">Valor</dt>
        <dd class="col-sm-10">R$ @Model.Valor</dd>

        <dt class="col-sm-2">Categoria</dt>
        <dd class="col-sm-10">@Model.Categoria?.Nome</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
